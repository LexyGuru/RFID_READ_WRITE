{
  "package": {
    "productName": "NFC Rust",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.nfcrust.app",
      "icon": [
        "icons/icon.png"
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "NFC Rust - NTAG216 URL Writer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}
